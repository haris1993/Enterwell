@model Faktura_Test.Models.PDV
@{ var title = "Kreiraj porez";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
<input type="hidden" asp-for="Id" />title = "Uredi porez";
}
        <div class="col-12">

            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Naziv"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Procent"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Procent" class="form-control" />
                    <span asp-validation-for="Procent" class="text-danger"></span>

                </div>
              

                <div class="form-group row">
                    <div class="col-8 offset-4">
                        @if (Model.Id != 0)
                        {
            <partial name="_EditAndBackToListButton" model="Model.Id" /> }
        else
        {
<partial name="_CreateAndBackToListButton" />}
                    </div>
                </div>
            </div>
        </div>
</form>

