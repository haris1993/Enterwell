@model Uplift.Models.Faktura
@{ var title = "Kreiraj Fakturu";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
<input type="hidden" asp-for="Id" />title = "Uredi Fakturu";
            }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Naziv"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Red_Broj_faktura"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Red_Broj_faktura" class="form-control" />
                    <span asp-validation-for="Red_Broj_faktura" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Datum_Stvaranja_Fakture"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Datum_Stvaranja_Fakture" class="form-control" />
                    <span asp-validation-for="Datum_Stvaranja_Fakture" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Datum_Dospjeca_Fakture"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Datum_Dospjeca_Fakture" class="form-control" />
                    <span asp-validation-for="Datum_Dospjeca_Fakture" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Kolicina"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Kolicina" class="form-control" />
                    <span asp-validation-for="Kolicina" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        //Edit button and back to list
        <partial name="_EditAndBackToListButton" model="Model.Id" /> }
    else
    {
        //Create button and back to list
        <partial name="_CreateAndBackToListButton" />}
                </div>
            </div>
        </div>

    </div>

</form>

