@model Uplift.Models.ViewModels.NarudzbaViewModel
@using Uplift.Utility

@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<form method="post">
    @if (Model.DetaljiNarudzbe.Count() > 0)
    {
<br />
                <div class="backgroundWhite container">
                    <div class="card">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-12 d-none d-md-block col-md-6 pb-1">
                                <i class="fas fa-shopping-cart"></i> &nbsp; Sazetak narudzbe
                            </div>
                            <div class="col-12 col-md-4 offset-md-2 text-right">
                                <a asp-action="Index" asp-controller="Narudzba" asp-area="Index" class="btn btn-outline-info form-control btn-sm">Nazad</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="container rounded p-2">
                                <div class="row">
                                    <div class="col-12 col-lg-6 pb-4">
                                        <div class="row">
                                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                                <span class="text-primary">Detalji</span>
                                            </h4>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Ime</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Ime" id="txtName" readonly type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Broj telefona</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Broj_Telefona" id="txtPhone" readonly type="text" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Adresa</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Adresa" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Grad</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Grad" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Postanski broj</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Postanski_Broj" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row my-1">
                                            <div class="col-3">
                                                <label>Email</label>
                                            </div>
                                            <div class="col-9">
                                                <input asp-for="ZaglavljeNarudzbe.Email" type="text" readonly class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-5 offset-lg-1">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary">Stavke narudzbe</span>
                                        </h4>
                                        <ul class="list-group mb-3">
                                            @{ var total = 0.0;}

                                            @foreach (var details in Model.DetaljiNarudzbe)
                                            {
                            @*<li class="list-group-item d-flex justify-content-between">
                                <div>
                                    <input type="hidden" asp-for="@details.Id" />
                                    <h6 class="my-0">@details.StavkeFaktureNaziv + (Bez poreza)</h6>
                                    <h6 class="my-0">@details.StavkeFaktureNaziv + (Bez poreza)</h6>

                                    <small class="text-muted">Cijena : @details.CijenaBezPoreza</small>
                                </div>

                            </li>*@
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <div>
                                                        <input type="hidden" asp-for="@details.Id" />
                                                        <h4 class="my-0">@details.StavkeFaktureNaziv</h4><br />
                                                        <h6 class="text-muted">Cijena(bez poreza) : @details.CijenaBezPoreza.ToString("c")</h6>
                                                        <h6 class="text-muted">Cijena(sa porezom) : @details.CijenaSaPorezom.ToString("c")</h6>

                                                    </div>

                                                </li>
}



                                        </ul>
                                        @if (Model.ZaglavljeNarudzbe.Status != SD.StatuSubmitted)
                                        {
                        <div class="col-12">
                            <button class="btn btn-outline-success disabled form-control" disabled>@Model.ZaglavljeNarudzbe.Status</button>
                        </div>}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                @if (Model.ZaglavljeNarudzbe.Status != SD.StatusApproved && Model.ZaglavljeNarudzbe.Status != SD.StatusRejected)
                                {
                <div class="col-6 offset-md-4 col-md-4 col-lg-2 offset-lg-8">
                    <a asp-action="Approve" asp-route-id="@Model.ZaglavljeNarudzbe.Id" class="btn btn-success form-control">Prošla</a>
                </div>
                                    <div class="col-6 col-md-4 col-lg-2">
                                        <a asp-action="reject" asp-route-id="@Model.ZaglavljeNarudzbe.Id" class="btn btn-danger form-control">Odbijena</a>
                                    </div>}
                            </div>
                        </div>
                    </div>
                </div> }
            else
            {
<div class="backgroundWhite"> No items added to the shopping cart...</div>}
</form>


